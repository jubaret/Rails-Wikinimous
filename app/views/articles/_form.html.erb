<%= form_for(@article) do |f| %>
  <%# <div class="form-floating">
    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
    <label for="floatingTextarea">Comments</label>
  </div> %>

  <div class="form-floating m-3">
    <%= f.text_field :title, class: "form-control" %>
    <%= f.label :title, class: "p-6"%>
  </div>
  <div class="form-floating m-3">
    <%= f.text_area :content, class: "form-control", style: "height: 500px" %>
    <%= f.label :content, class: "p-6" %>
  </div>
  <% if @article.id%>
    <%= f.submit "Submit", class: "btn btn-default btn-primary m-3" %>
    <%= link_to "Cancel", article_path, class: "btn btn-light" %>
    <% else %>
    <%= f.submit "Submit", class: "btn btn-default btn-primary m-3" %>
    <%= link_to "Cancel", articles_path, class: "btn btn-light" %>
  <% end %>
<% end %>


